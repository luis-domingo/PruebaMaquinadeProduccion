<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_2"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/quantum" />

    <EditText
        android:id="@+id/textUsername"
        android:layout_width="223dp"
        android:layout_height="44dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/et_style"
        android:hint="Username"
        android:lines="1"
        android:padding="10dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColorHint="#4B4B4B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/testPassword"
        android:layout_width="223dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/et_style"
        android:hint="Password"
        android:inputType="textPassword"
        android:lines="1"
        android:padding="10dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColorHint="#4B4B4B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUsername"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="223dp"
        android:layout_height="44dp"
        android:layout_marginTop="112dp"
        android:backgroundTint="#3e9b9e"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="onLoginClick"
        android:text="Login"
        app:cornerRadius="15dp"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testPassword"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/noPasswordText"
        android:layout_width="150sp"
        android:layout_height="20dp"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:onClick="onPasswordClick"
        android:text="Forgot Password?"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.641"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testPassword" />

    <TextView
        android:id="@+id/noAccountText"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="onAccountClick"
        android:text="No account? Click here!"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.641"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>